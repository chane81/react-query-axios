{
  "compilerOptions": {
    "outDir": "lib/esm",
    "baseUrl": ".",
    "module": "esnext",
    "target": "es5",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017", "ESNext"],
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/utils/*": ["./src/utils/*"],
      "~/src/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "lib", ".github", ".vscode", ".husky"]
}
